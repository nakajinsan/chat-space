.side-bar
  .side-bar__user-name
    .side-bar__box
      .user-name
        = current_user.name
      .icon-name 
        =link_to new_group_path do
          = icon('far','edit',class: 'icon-btn') 
          %span<>
        =link_to edit_user_path(current_user) do
          = icon('fas','cog',class: 'icon-btn')
          %span<> 
  .side-bar__group-list
    - current_user.groups.each do |group|
      .group-list
        = link_to group_messages_path(group) do
          .group-list__box
            = group.name
          .message-list__box
            =group.show_last_message